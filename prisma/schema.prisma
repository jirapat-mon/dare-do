generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String    @id @default(cuid())
  email                String    @unique
  password             String
  name                 String?
  role                 String    @default("user") // user, admin
  avatarUrl            String?   // base64 or URL of profile picture
  bannerUrl            String?   // base64 or URL of profile banner
  avatarFrame          String    @default("default") // frame key
  lifetimePoints       Int       @default(0) // total points earned (never decreases, used for rank)
  province             String?   // Thai province code e.g. "BKK", "CNX"
  // Subscription
  subscriptionTier     String    @default("free") // free, starter, pro
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?
  subscriptionStatus   String    @default("inactive") // active, past_due, cancelled, inactive
  subscriptionEndsAt   DateTime?
  createdAt            DateTime  @default(now())
  wallet               Wallet?
  contracts            Contract[]
  redemptions          RewardRedemption[]
  badges               UserBadge[]
  friendshipsSent      Friendship[] @relation("FriendshipSent")
  friendshipsReceived  Friendship[] @relation("FriendshipReceived")
  ownedFrames          UserOwnedFrame[]
}

model Wallet {
  id               String             @id @default(cuid())
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id])
  balance          Float              @default(0) // available money (THB)
  lockedBalance    Float              @default(0) // money locked in active contracts
  points           Int                @default(0)
  streak           Int                @default(0)
  lastActiveAt     DateTime?
  transactions     Transaction[]
  redemptions      RewardRedemption[]
  streakInsurances StreakInsurance[]
  withdrawRequests WithdrawRequest[]
}

model Transaction {
  id          String    @id @default(cuid())
  walletId    String
  wallet      Wallet    @relation(fields: [walletId], references: [id])
  contractId  String?
  contract    Contract? @relation(fields: [contractId], references: [id])
  type        String // subscription, points_earned, points_redeemed, streak_bonus
  amount      Float
  description String
  createdAt   DateTime  @default(now())
}

model Contract {
  id               String             @id @default(cuid())
  userId           String
  user             User               @relation(fields: [userId], references: [id])
  goal             String
  duration         Int
  deadline         String             // HH:mm daily deadline
  stakes           Float              @default(0) // money staked (THB)
  status           String             @default("active") // active, success, failed
  daysCompleted    Int                @default(0)
  createdAt        DateTime           @default(now())
  submissions      Submission[]
  transactions     Transaction[]
  streakInsurances StreakInsurance[]
}

model Submission {
  id         String   @id @default(cuid())
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id])
  imageData  String   @db.Text // base64 encoded image
  note       String?
  metadata   String?  @db.Text // JSON: timestamp, device info
  status     String   @default("pending") // pending, approved, rejected
  createdAt  DateTime @default(now())
}

// Platform Digital Wallet — เก็บเงินรายได้จาก subscription
model PlatformWallet {
  id           String                @id @default(cuid())
  balance      Float                 @default(0) // ยอดเงินสะสม
  totalRevenue Float                 @default(0) // รายได้ทั้งหมด
  transactions PlatformTransaction[]
}

model PlatformTransaction {
  id               String         @id @default(cuid())
  platformWalletId String
  platformWallet   PlatformWallet @relation(fields: [platformWalletId], references: [id])
  userId           String? // ลูกค้าที่จ่าย
  type             String // subscription_income, payout, refund
  amount           Float
  description      String
  stripePaymentId  String? // Stripe payment reference
  createdAt        DateTime       @default(now())
}

// SubscriptionPlan — config สำหรับแต่ละ tier
model SubscriptionPlan {
  id              String @id @default(cuid())
  tier            String @unique // free, starter, pro
  name            String
  priceMonthly    Float
  pointsPerMonth  Int    @default(0) // points ที่ได้ต่อเดือน
  maxContracts    Int // จำนวน contract ที่สร้างได้
  features        String // JSON string of features
  stripePriceId   String? // Stripe price ID
}

// Reward — ของรางวัลที่แลกได้ด้วย points
model Reward {
  id          String            @id @default(cuid())
  name        String            @unique
  nameTh      String
  description String
  descriptionTh String
  pointsCost  Int
  imageUrl    String
  category    String // gadget, gift_card, lifestyle
  stock       Int              @default(-1) // -1 = unlimited
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  redemptions RewardRedemption[]
}

model RewardRedemption {
  id        String   @id @default(cuid())
  rewardId  String
  reward    Reward   @relation(fields: [rewardId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  walletId  String
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  status    String   @default("pending") // pending, processing, shipped, completed, cancelled
  address   String?  // ที่อยู่จัดส่ง
  note      String?
  createdAt DateTime @default(now())
}

// Achievement Badge — earned by users for milestones
model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  badgeKey String // matches BADGES constant in gamification.ts
  earnedAt DateTime @default(now())

  @@unique([userId, badgeKey])
}

// Streak Insurance — allows skipping a day without breaking streak
model StreakInsurance {
  id         String   @id @default(cuid())
  walletId   String
  wallet     Wallet   @relation(fields: [walletId], references: [id])
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id])
  usedAt     DateTime @default(now())
}

// Friendship — social connections between users
model Friendship {
  id        String   @id @default(cuid())
  userId    String   // who sent the request
  friendId  String   // who received the request
  status    String   @default("pending") // pending, accepted, rejected
  createdAt DateTime @default(now())

  user   User @relation("FriendshipSent", fields: [userId], references: [id])
  friend User @relation("FriendshipReceived", fields: [friendId], references: [id])

  @@unique([userId, friendId])
}

// Withdraw Request — ถอนเงินจาก wallet
model WithdrawRequest {
  id          String    @id @default(cuid())
  walletId    String
  wallet      Wallet    @relation(fields: [walletId], references: [id])
  amount      Float
  bankName    String    // ธนาคาร e.g. "SCB", "KBANK"
  bankAccount String    // เลขบัญชี
  accountName String    // ชื่อบัญชี
  status      String    @default("pending") // pending, approved, rejected, completed
  note        String?   // admin note
  createdAt   DateTime  @default(now())
  processedAt DateTime?
}

// User Owned Avatar Frames — purchased premium frames
model UserOwnedFrame {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  frameKey String

  @@unique([userId, frameKey])
}
